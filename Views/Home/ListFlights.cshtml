@model List<Flight>

@{
    ViewBag.Title = "FlightList";
}

<head>
    <link rel="stylesheet" href="~/css/StyleAdmin.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>

<h1 style="text-align: center; color: #1C315E;">Flights</h1>
@if (Model.Count != 0)
{
<h4 style="text-align: center; color: red">@Model.First().depertureTime.ToShortDateString() flights are listed for</h4>
}
else
{
<h4 style="text-align: center; color: red">No flights were found according to your search criteria !</h4>
}
<br />
<div style="text-align: center;">
    <table style="text-align: center;" class="table table-bordered">
        <tr>
            <th>From</th>
            <th>To</th>
            <th>Deperture Time</th>
            <th>Price</th>
            <th>Buy</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.from</td>
                <td>@item.to</td>
                <td>@item.depertureTime.ToShortTimeString()</td>
                <td>@item.price</td>
                @{
                    string id = ViewBag.id;
                    if (id == null)
                    {
                        <td><a href="/User/Login" class="btn btn-warning">Choose</a></td>
                    }
                    else
                    {
                        <td><a href="/Home/BuyFlightTicket?id=@item.ID" class="btn btn-warning">Choose</a></td>
                    }
                }

            </tr>
        }
    </table>


</div>

