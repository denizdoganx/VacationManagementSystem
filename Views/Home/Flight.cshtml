@model FlightListVM
@{
    ViewBag.Title = "Flight";
}

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/css/bodystyle.css">
</head>
<body>
    <section class="w3l-main-slider" id="home">
        <div class="banner-content-flight">
                <div class="demo-inner-content">
                    <div class="container">
                        <div class="banner-infhny">
                            <h3>Quickly find the most suitable flight for you.</h3>
                            <h6 class="mb-3">Discover your next adventure</h6>
                            <div class="flex-wrap search-wthree-field mt-md-5 mt-4">
                                <form asp-controller="Home" asp-action="Flight" method="post" class="booking-form">
                                    <div class="row book-form">
                                        <div class="form-input col-md-4 mt-md-0 mt-3">
                                            <input asp-for="from" type="text" name="from" placeholder="From" required="" />  
                                        </div>
                                        <div class="form-input col-md-4 mt-md-0 mt-3">
                                            <input asp-for="to" type="text" name="to" placeholder="To" required="" />
                                        </div>
                                        <div class="form-input col-md-4 mt-md-0 mt-3">
                                            <input asp-for="depertureTime" type="date" name="depertureTime" placeholder="Date" required="">
                                        </div>
                                        <div class="bottom-btn col-md-4 mt-md-0 mt-3">
                                            <button class="btn btn-style btn-secondary">
                                                <span class="fa fa-search mr-3"
                                                      aria-hidden="true"></span> Search
                                            </button>
                                        </div>
                                    </div>
                                </form>
                                <div>
                                    @ViewBag.errorMessage
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
</body>
</html>

