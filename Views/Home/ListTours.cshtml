@model List<Tour>

@{
    ViewBag.Title = "TourList";
}

<head>
    <link rel="stylesheet" href="~/css/StyleAdmin.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>

<h1 style="text-align: center; color: #1C315E;">Tours</h1>
@if (Model.Count != 0)
{
    <h4 style="text-align: center; color: red">Tours are listed for the @Model.First().tourType region.</h4>
}
else
{
    <h4 style="text-align: center; color: red">No tours found matching the criteria you entered ! </h4>
}
<br />
<div style="text-align: center;">
    <table style="text-align: center;" class="table table-bordered">
        <tr>
            <th>Region</th>
            <th>Description</th>
            <th>Deperture Place</th>
            <th>Arrival Place</th>
            <th>Price</th>
            <th>Buy</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.tourType</td>
                <td>@item.description</td>
                <td>@item.deperturePlace</td>
                <td>@item.arrivalPlace</td>
                <td>@item.tourPrice</td>
                @{
                    string id = ViewBag.id;
                    if (id == null)
                    {
                        <td><a href="/User/Login" class="btn btn-warning">Choose</a></td>
                    }
                    else
                    {
                        <td><a href="/Home/ReservationTour?id=@item.ID" class="btn btn-warning">Choose</a></td>
                    }
                }

            </tr>
        }
    </table>


</div>

