
@{
    ViewBag.Title = "Hotel";
}

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/css/bodystyle.css">
</head>
<body>
    <section class="w3l-main-slider" id="home">
        <div class="banner-content-hotel">
                <div class="demo-inner-content">
                    <div class="container">
                        <div class="banner-infhny">
                            <h3>Book hotels quickly and easily.</h3>
                            <h6 class="mb-3">Discover your next adventure</h6>
                            <div class="flex-wrap search-wthree-field mt-md-5 mt-4">
                                <form action="#" method="post" class="booking-form">
                                    <div class="row book-form">
                                        <div class="form-input col-md-4 mt-md-0 mt-3">
                                            <input type="text" name="" placeholder="City" required="">
                                        </div>
                                        <div class="form-input col-md-4 mt-md-0 mt-3">

                                            <input type="date" name="check-in date" placeholder="Check-in Date" required="">
                                        </div>
                                        <div class="form-input col-md-4 mt-md-0 mt-3">

                                            <input type="date" name="departure date" placeholder="Departure Date" required="">
                                        </div>
                                        <div class="bottom-btn col-md-4 mt-md-0 mt-3">
                                            <button class="btn btn-style btn-secondary">
                                                <span class="fa fa-search mr-3"
                                                      aria-hidden="true"></span> Search
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
</body>
</html>





